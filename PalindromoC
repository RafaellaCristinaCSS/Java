#include <stdio.h>
#include <stdlib.h>
#include <string.h>
//Palindromo

int main()
{
    char texto[100], inverso[100];
    int i,j = 0;

    printf("Digite sua String: ");
    gets(texto);
    printf("\nO tamanho e: %d\n", strlen(texto));

    for(i = strlen(texto)-1; i>= 0; i--)
        {
            inverso[j] = texto[i];
            j++;
        }
     inverso[j] = '\0';
    printf("O inverso e: %s \n");

    if(strcmp(texto,inverso) == 0){
        printf("SIM");
    }else{
        printf("NAO");
    }

    system("pause");
    return 0;
}
