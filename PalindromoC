#include <stdio.h>
#include <stdlib.h>
#include <strings.h>

main(){
  char texto[100], inverso[100];
  int i,j;
  printf("Digite um texto: ");
  gets(texto);

  j=0;
  for (i=strlen(texto)-1; i >=0; i--){
      inverso[j] = texto[i];
      j++;
  }
  inverso[j] = '\0';

  if(strcmp(texto,inverso)==0){
    printf("SIM");
  }
  else{
    printf("NAO");
  }
  system("pause");
}
